// =============================================================================
// FIRESTORE SECURITY RULES
// =============================================================================
// NOTE: Currently in testing mode - rules not actively enforced
// Apply these rules in Firebase Console when ready for production

rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Conversations collection
    // Any authenticated user can read/write any conversation
    // TODO: Add granular ownership control later
    match /conversations/{conversationId} {
      allow read, write: if request.auth != null;
      
      // Messages subcollection
      // Any authenticated user can read/write messages in any conversation
      match /messages/{messageId} {
        allow read, write: if request.auth != null;
      }
    }
  }
}


